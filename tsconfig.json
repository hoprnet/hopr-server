{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "exclude": ["test", "dist"]
}
